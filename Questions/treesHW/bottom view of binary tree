class Sol{
    Node ptr;
    int c;
    Sol(Node p,int c){
        ptr=p;
        this.c=c;
    }
}
class Solution
{
    //Function to return a list containing the bottom view of the given tree.
    static ArrayList<Integer> list;
    static int min;
    static int max;
    static void fun(Node root,int c){
        if(root==null)return;
        min=Math.min(min,c);
        max=Math.max(max,c);
        fun(root.left,c-1);
        fun(root.right,c+1);
    }
    public ArrayList <Integer> bottomView(Node root)
    {
        // Code here
        min=Integer.MAX_VALUE;
        max=Integer.MIN_VALUE;
        fun(root,0);
        list=new ArrayList<>();
        for(int i=0;i<=max-min;i++)list.add(-1);
        Queue<Sol> q=new LinkedList<>();
        Sol solution=new Sol(root,0);
        q.offer(solution);
        while(!q.isEmpty()){
            solution=q.poll();
            if(solution.ptr.left!=null){
                Sol sol=new Sol(solution.ptr.left,solution.c-1);
                q.offer(sol);
            }
            if(solution.ptr.right!=null){
                Sol sol=new Sol(solution.ptr.right,solution.c+1);
                q.offer(sol);
            }
            list.set(solution.c-min,solution.ptr.data);
        }
        for(int i=0;i<list.size();){
            if(list.get(i)==-1){
                list.remove(i);
            }
            else i++;
        }
        return list;
    }
}
